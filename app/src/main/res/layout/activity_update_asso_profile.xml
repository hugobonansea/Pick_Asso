<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateAssoProfile">


    <TextView
        android:id="@+id/TextViewAcronymeAsso"
        android:layout_width="250dp"
        android:layout_height="19dp"
        android:layout_marginTop="28dp"
        android:text="Acronyme du nom de l'association"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.214"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageProfil" />

    <TextView
        android:id="@+id/textViewAssoInfos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:gravity="center_horizontal"
        android:text="Informations générales de l'Association"
        android:textSize="20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/TextNomAsso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:hint="Nom de l'association"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAssoInfos" />

    <EditText
        android:id="@+id/editTextDescribAsso"
        android:layout_width="352dp"
        android:layout_height="38dp"
        android:layout_marginTop="4dp"
        android:ems="13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextViewDescribAsso" />

    <EditText
        android:id="@+id/editTextAcronymeAsso"
        android:layout_width="352dp"
        android:layout_height="38dp"
        android:layout_marginTop="4dp"
        android:ems="13"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextViewAcronymeAsso" />

    <TextView
        android:id="@+id/TextViewDescribAsso"
        android:layout_width="214dp"
        android:layout_height="19dp"
        android:layout_marginTop="12dp"
        android:text="Description de votre association :"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.005"
        app:layout_constraintStart_toStartOf="@+id/TextViewAcronymeAsso"
        app:layout_constraintTop_toBottomOf="@+id/editTextAcronymeAsso" />

    <ImageView
        android:id="@+id/imageProfil"
        android:layout_width="171dp"
        android:layout_height="146dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextNomAsso"
        app:srcCompat="@drawable/ic_baseline_person_24" />

    <Button
        android:id="@+id/buttonEnregistrer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="Enregistrer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTresName" />

    <TextView
        android:id="@+id/textViewCampus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Campus"
        app:layout_constraintStart_toStartOf="@+id/TextViewDescribAsso"
        app:layout_constraintTop_toBottomOf="@+id/editTextDescribAsso" />

    <EditText
        android:id="@+id/editTextCampusAsso"
        android:layout_width="352dp"
        android:layout_height="38dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCampus" />

    <TextView
        android:id="@+id/TextViewConstitutionBureau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Constitution du Bureau"
        android:textSize="20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextCampusAsso" />

    <TextView
        android:id="@+id/textViewInfoBureau"
        android:layout_width="353dp"
        android:layout_height="39dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="40dp"
        android:text="Pour chacun des membres du bureau, renseignez :
        Fonctions, Noms & Prénoms, Promotions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextViewConstitutionBureau" />

    <EditText
        android:id="@+id/editTextBureau"
        android:layout_width="352dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewInfoBureau" />

    <ImageButton
        android:id="@+id/imageButtonSuppr"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:tint="#FF0000"
        app:layout_constraintBottom_toTopOf="@+id/textViewAssoInfos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.926"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.615"
        app:srcCompat="@android:drawable/ic_menu_delete" />


</androidx.constraintlayout.widget.ConstraintLayout>